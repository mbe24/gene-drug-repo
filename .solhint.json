{
  "extends": "solhint:recommended",
  "rules": {
    "no-complex-fallback": "warn",
    "indent": ["error", 4],
    "quotes": ["error", "double"],
    "max-line-length": ["error", 140],
    "no-inline-assembly": false,
    "compiler-fixed": false,
    "prettier/prettier": "error",
    "avoid-throw": false,
    "avoid-suicide": "error",
    "avoid-sha3": "warn"
  },
  "plugins": ["prettier"]
}
